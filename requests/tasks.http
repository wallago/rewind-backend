> {%
  local body = vim.fn.json_decode(response.body)
  client.global.set("task_uuid", body["uuid"])
%}

###

GET {{api}}/tasks/{{task_uuid}} HTTP/1.1
Accept: application/json

###

PUT {{api}}/tasks/{{task_uuid}} HTTP/1.1
Content-Type: application/json
Accept: application/json

{
  "name": "Buy milk",
